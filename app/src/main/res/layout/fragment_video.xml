<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/sgp_video"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <TextView
        android:id="@+id/tv_video_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/comment_margin_left_right"
        android:text="这是标题！"
        style="@style/text_default_style"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/comment_margin_left_right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_video_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_date_style"
            android:text="官方"/>
        
        <TextView
            android:id="@+id/tv_video_detail_date"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bottom_date_style"
            android:text="23-01-22"/>

    </LinearLayout>

</LinearLayout>