<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp">

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_favorites_cover"
                        style="@style/cover_image_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/image_test2" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/rl_play"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/half_black_transparent_shape">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:paddingLeft="2dp"
                            android:src="@mipmap/video_play" />

                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>

<!--            <androidx.cardview.widget.CardView-->
<!--                android:layout_width="70dp"-->
<!--                android:layout_height="70dp"-->
<!--                android:layout_gravity="center"-->
<!--                app:cardCornerRadius="8dp"-->
<!--                app:cardElevation="0dp">-->

<!--                <ImageView-->
<!--                    android:id="@+id/iv_favorites_cover"-->
<!--                    style="@style/cover_image_style"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:src="@mipmap/image_test2" />-->

<!--            </androidx.cardview.widget.CardView>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_favorites_title"
                style="@style/text_default_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图解|谨防网络诈骗发图解|谨防网络诈骗发" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_favorites_manager_name"
                    style="@style/bottom_date_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="官方" />

                <TextView
                    android:id="@+id/tv_favorites_manager_datetime"
                    style="@style/bottom_date_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="2022-11-18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/bottom_date_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏于 " />

                <TextView
                    android:id="@+id/tv_favorites_date"
                    style="@style/bottom_date_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022-11-18" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>