<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/theme_white_fa"
        android:layout_height="110dp">
<!--        android:elevation="3dp">-->

<!--        <Button-->
<!--            android:id="@+id/btn_article_list"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="文章学习"/>-->

<!--        <Button-->
<!--            android:id="@+id/btn_video_list"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="视频学习"/>-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/btn_article_list"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/blue_corners_shape">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/knowledge_article"/>
                </RelativeLayout>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_default_style"
                    android:text="@string/article_knowledge_str"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/btn_video_list"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/blue_corners_shape">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/knowledge_viedeo" />
                </RelativeLayout>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_default_style"
                    android:text="@string/video_knowledge_str"/>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@color/black"/>-->

    <TextView
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/tv_test"
        android:background="@color/theme_white_fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_default_style"
        android:textSize="15sp"
        android:text="推荐"/>

    <FrameLayout
        android:id="@+id/fl_recommendation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>