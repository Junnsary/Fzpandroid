<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="8dp"
    android:background="?android:selectableItemBackground"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comment_margin_left_right"
                android:layout_marginEnd="@dimen/comment_margin_left_right"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_question_user_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/avatar_test" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_question_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/text_default_style"
                    android:text="萧宏润" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/bottom_date_style"
                        android:text="发布于  "/>

                    <TextView
                        android:id="@+id/tv_question_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/bottom_date_style"
                        android:text="22-10-01"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_default_style"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容这是我提问的内容"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_answer"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/answer"/>

            <TextView
                android:id="@+id/tv_answer_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="123"/>


        </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>
